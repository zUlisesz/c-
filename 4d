#include <iostream>
#include <cstdlib>
using namespace std; 

int main() {
    int f = 2;  // Numero de filas
    int c = 2;  // Numero de columnas
    int p = 2;  // Numero de profundidad
    int t = 2;  // Numero de tiempo (4ta dimension)

    int array[f][c][p][t];  // Declaramos una matriz de 4 dimensiones

    // Asignamos valores impares aleatorios a la matriz
    for (int i = 0; i < f; i++) {                
        for (int j = 0; j < c; j++) {  
            for (int k = 0; k < p; k++){  
                for (int l = 0; l < t; l++){  
                    array[i][j][k][l] = (rand() % 50) * 2 + 1;  
                    cout << array[i][j][k][l] << " ";  
                }
            }
        }
        cout << "\n";
    }

    cout << " - - - - - - - - - - - - - - - " << endl;

    // Imprimimos las direcciones reales en memoria
    for (int i = 0; i < f; i++) {  
        for (int j = 0; j < c; j++) {  
            for (int k = 0; k < p; k++){  
                for (int l = 0; l < t; l++){  
                    cout << &array[i][j][k][l] << " ";  
                }
            }
        }
        cout << "\n";
    }

    cout << " - - - - - - - - - - - - - - - " << endl;

    // Imprimimos las direcciones con el Polinomio de Direccionamiento para 4D
    for (int i = 0; i < f; i++) {  
        for (int j = 0; j < c; j++) {  
            for (int k = 0; k < p; k++){  
                for (int l = 0; l < t; l++){  
                    cout << &array[0][0][0][0] + ((i*c*p*t) + (j*p*t) + (k*t) + l) << " ";
                }
            }
        }
        cout << "\n";
    }
}
